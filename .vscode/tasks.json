{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Agent Service",
      "type": "shell",
      "command": "yarn",
      "args": ["dev:agent"],
      "group": "build",
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+)\\s+-\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "message": 4
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*(Uvicorn running|Application startup complete).*",
          "endsPattern": ""
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Start Electron UI",
      "type": "shell",
      "command": "yarn",
      "args": ["dev"],
      "group": "build",
      "isBackground": true,
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Start All (Agent + UI)",
      "dependsOrder": "parallel",
      "dependsOn": [
        "Start Agent Service",
        "Start Electron UI"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "Install Dependencies",
      "type": "shell",
      "command": "yarn install",
      "group": "none",
      "problemMatcher": []
    },
    {
      "label": "Run Agent Tests",
      "type": "shell",
      "command": "yarn",
      "args": ["workspace", "agent", "test"],
      "group": "test",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Lint Agent",
      "type": "shell",
      "command": "yarn",
      "args": ["workspace", "agent", "lint"],
      "group": "test",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    }
  ]
}
